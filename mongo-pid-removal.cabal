-- Synopsis:               
Description:         Removes old pids from mongo   
Cabal-Version:          >= 1.10
Build-Type:             Simple

Library
  Default-Language:     Haskell2010
  HS-Source-Dirs:       src
  GHC-Options:          -Wall
  Exposed-Modules:      Mongo.Pid.Removal
  Other-Modules:        Mongo.Pid.Removal.Internal
  Build-Depends:        base >= 4 && < 5
                      , persist-mongo-template >= 0.5.14
                      , basic-prelude
                      , text
                      , bytestring
                      , aeson
                      , yaml
                      , persistent                     >= 1.3.0.6  
                      , persistent-mongoDB             >= 1.3.1.1  

Executable alarmclean
   main-is:            RemovalMain.hs
   default-language:   Haskell2010
   ghc-options:        -threaded -O2 -rtsopts -Wall
   HS-Source-Dirs:     src
   build-depends:      base
                      , persist-mongo-template
                      , basic-prelude
                      , text
                      , bytestring
                      , aeson
                      , yaml
                      , persistent                   
                      , persistent-mongoDB           



Test-Suite spec
  Type:                 exitcode-stdio-1.0
  Default-Language:     Haskell2010
  Hs-Source-Dirs:       src
                      , test
                      , persist-mongo-template
                      , text
                      , bytestring
                      , aeson
                      , yaml
                      , persistent                   
                      , persistent-mongoDB                      

  Ghc-Options:          -Wall
  Main-Is:              Spec.hs
  Build-Depends:        base
                      , hspec

Source-Repository head
  Type:                 git
